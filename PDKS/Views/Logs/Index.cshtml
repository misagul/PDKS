@model List<PDKS.Models.Log>
@{
	ViewData["Title"] = "Logs";
}

<h1>Logs</h1>

<table class="table">
	<thead>
		<tr>
			<th>Id</th>
			<th>Username</th>
			<th>DateTime</th>
			<th>Shift</th>
			<th>OnTime</th>
		</tr>
	</thead>

	<tbody>
		@foreach (var log in Model)
		{
			<tr>
				<td>@log.Id</td>
				<td>@log.User.Username</td>
				<td>@log.DateTime</td>
				<td>@log.Shift</td>
				<td>
					<div class="mx-4">
						@if (@log.OnTime)
						{
							<svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="green" class="bi bi-circle-fill" viewBox="0 0 16 16">
								<circle cx="8" cy="8" r="8" />
							</svg>
						}
						else
						{
							<svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="red" class="bi bi-circle-fill" viewBox="0 0 16 16">
								<circle cx="8" cy="8" r="8" />
							</svg>
						}
					</div>
				</td>
				
			</tr>
		}
	</tbody>

</table>
