@model List<PDKS.Models.User>
@{
	ViewData["Title"] = "Users";
}

<h1>Users</h1>

<table class="table">
	<thead>
		<tr>
			<th>Id</th>
			<th>Username</th>
			<th>Password</th>
			<th>IsActive</th>
			<th>Edit</th>
		</tr>
	</thead>

	<tbody>
		@foreach (var user in Model)
		{
		<tr>
			<td>@user.Id</td>
			<td>@user.Username</td>
			<td>@user.Password</td>
				<td>
					<div class="mx-4">
					@if (@user.IsActive == 1)
					{
						<svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="green" class="bi bi-circle-fill" viewBox="0 0 16 16">
							<circle cx="8" cy="8" r="8" />
						</svg>
					}else
					{
						<svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="red" class="bi bi-circle-fill" viewBox="0 0 16 16">
							<circle cx="8" cy="8" r="8" />
						</svg>
						}
					</div>
				</td>
				<td><a href="Users/Edit/@user.Id">Edit</a></td>
		</tr>
		}
	</tbody>

</table>

<a href="/users/add/">Add New User</a>
